{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ES2020",
        "target": "ES2017",
        "strict": true,
        "allowJs": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ],
}
