{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "strict": true,
        "allowJs": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "paths": {
            "@core": ["./src/core"],
            "@core/engine": ["./src/core/engine"],
            "@core/models": ["./src/core/models"],
        }
    },
    "exclude": [
        "node_modules"
    ]
}