{
    "compilerOptions": {
        "moduleResolution": "node",
        "strict": true,
        "allowJs": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "baseUrl": "src",
        "paths": {
            "@common/*": ["common/*"],
        }
    },
    "exclude": [
        "node_modules"
    ]
}